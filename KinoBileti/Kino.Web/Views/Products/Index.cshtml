@model List<Kino.Domain.DomainModels.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new Movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }


        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 45rem;">
                <img class="card-img-top" src="@item.ProductImage" style="height: 65%" alt="image for movie" />

                <div class="card-body">
                   <h5 class="card-title">@item.ProductName</h5>
   
                    <p class="card-text">Ticket Price: @item.ProductPrice $</p>
                    <p class="card-text">Date: @item.DateAndTime</p>
                    <p class="card-text">Rating: @item.Rating</p>
                </div>

                <div class="card-footer">

                    <a asp-controller="Products" asp-action="AddProductToCard" asp-route-id="@item.Id" class="btn btn-info">Add to Cart</a>
                    <a asp-controller="Products" asp-action="Edit" asp-route-p="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>

                </div>
            </div>
        </div>



        if (i % 3 == 2)
        {
            @:</div>
        }
    }

</div>
